@model FluvioApp.Models.Project

<h2 class="text-center mt-5">Adaugare Proiect</h2>
<br/>

<div class="container mt-5">

    <div class="row">

        <div class="col-6 offset-3">

            @using (Html.BeginForm(actionName: "New", controllerName: "Projects",
            method: FormMethod.Post))
            {

                @Html.ValidationSummary(false, "", new {@class = "text-danger"})

                @Html.Label("ProjectName", "Numele Proiectului")
                <br />
                @Html.TextBox("ProjectName", null, new {@class = "form-control"})

                @Html.ValidationMessageFor(m => m.ProjectName, "", new { @class = "text-danger" })
                <br /><br />

                @Html.Label("ProjectDescription", "Descrierea Proiectului")
                <br />
                @Html.TextArea("ProjectDescription", null, new { @class = "form-control" })

                @Html.ValidationMessage("ProjectDescription", null, new {@class = "text-danger"})
                <br /><br />
                <div class="flex">
                    <button class="btn btn-success" type="submit">Adauga Proiect</button>
                
                    <a class="btn btn-success" href="/Projects/Index">Inapoi la afisarea proiectelor</a>
                </div>
            }

        </div>

    </div>

</div>
